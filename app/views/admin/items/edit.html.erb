<main>
  <h4>商品詳細</h4>
  <%= form_with model: @item, url: admin_item_path(@item.id) do |f|%>
    <label for="inputName">商品名</label>
    <%= f.text_field :name, autofocus: true, id:"inputName", placeholder: @item.name %>
    <label for="inputintroduction">商品紹介</label>
    <%= f.text_area :introduction, autofocus: true, id:"inputintroduction",  placeholder: @item.introduction %> 
    <label for="inputprice">価格</label>
    <%= f.text_field :price, autofocus: true, id:"inputprice", placeholder: @item.price %>
    <%= f.submit "変更を保存" %>
  <% end %>
</main>